{
  "version": 2,
  "builds": [ { "src": "package.json", "use": "@vercel/next" } ],
  "rewrites": [       
    { "source": "/:slug", "destination": "/api/:slug" }
  ]
}

{
  "functions": {
    "pages/api/*.js": {
      "maxDuration": 15
    }
  },
  "regions": ["iad1"] // Same as MongoDB cluster region
}
